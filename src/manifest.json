{
    "manifest_version": 3,
    "name": "No Fantasy Critic Kings",
    "version": "1.0",
    "description": "Removes the crown from fantasycritic.games league pages to keep the players humble.",
    "icons": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "content_scripts": [
      {
        "css": ["style.css"],
        "matches": [
          "https://www.fantasycritic.games/league/*"
        ]
      }
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "no-fantasy-critic-kings-extension"
      }
    }
  }